<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sidespinner="http://schemas.android.com/apk/res-auto"
    tools:context="blacklinden.com.vijugrup.MainActivity">

    <blacklinden.com.vijugrup.SideSpinner
        android:id="@+id/sidespin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        sidespinner:layout_constraintBottom_toTopOf="@+id/sidespinner_vegetables"
        sidespinner:layout_constraintEnd_toEndOf="parent"
        sidespinner:layout_constraintHorizontal_bias="0.56"
        sidespinner:layout_constraintStart_toStartOf="parent"
        sidespinner:layout_constraintTop_toTopOf="parent"
        sidespinner:layout_constraintVertical_bias="1.0" />

    <blacklinden.com.vijugrup.SideSpinner
        android:id="@+id/sidespinner_vegetables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sidespin"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        sidespinner:layout_constraintBottom_toBottomOf="parent"
        sidespinner:layout_constraintTop_toTopOf="parent"
        sidespinner:values="@array/vegetable_array"
        tools:layout_editor_absoluteX="27dp" />


</android.support.constraint.ConstraintLayout>
